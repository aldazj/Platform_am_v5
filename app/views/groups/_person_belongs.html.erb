<br>
<ol class="breadcrumb">
  <li class="active"><i class="fa fa-dashboard"></i>  People belonging to group <%= @group.name %> </li>
</ol>
<table class="table table-bordered table-hover table-striped tablesorter">
  <thead>
  <tr>
    <th>Lastname </th>
    <th>Firstname</th>
    <th>Email</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @person_belong.each do |person| %>
      <tr>
        <td><%= person.lastname %></td>
        <td><%= person.firstname %></td>
        <td><%= person.email %></td>
        <td><%= link_to 'Show', person %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @person_belong %>

<script>
    $(function(){
        $('.pagination a').attr('data-remote', 'true')
    });
</script>